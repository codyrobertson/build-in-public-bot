{
  "name": "build-in-public-bot",
  "version": "1.0.0",
  "description": "AI-powered CLI bot for automating build-in-public tweets with code screenshots",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bip": "dist/cli.js",
    "build-in-public": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/build-in-public-bot.git"
  },
  "homepage": "https://github.com/yourusername/build-in-public-bot#readme",
  "bugs": {
    "url": "https://github.com/yourusername/build-in-public-bot/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:clean": "rm -rf ~/.bip && npm test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "NODE_ENV=test jest --runInBand --testPathPattern=src/.*\\.test\\.ts$",
    "test:integration": "npm run build && NODE_ENV=test jest --runInBand --testPathPattern=src/__tests__/integration/.*\\.test\\.ts$",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run test:unit && npm run build",
    "link-local": "npm link",
    "unlink-local": "npm unlink",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "cli",
    "build-in-public",
    "twitter",
    "bot",
    "automation",
    "social-media",
    "developer-tools"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.2",
    "@iarna/toml": "^2.2.5",
    "@types/pngjs": "^6.0.5",
    "axios": "^1.6.2",
    "canvas": "^3.1.2",
    "canvaskit-wasm": "^0.40.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "highlight.js": "^11.11.1",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.20.1",
    "ora": "^7.0.1",
    "pngjs": "^7.0.0",
    "puppeteer": "^21.6.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "simple-git": "^3.20.0",
    "tough-cookie": "^4.1.3",
    "twitter-api-v2": "^1.15.2",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/axios-mock-adapter": "^1.10.0",
    "@types/jest": "^29.5.10",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.10.0",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}
