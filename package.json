{
  "name": "build-in-public-bot",
  "version": "0.1.0",
  "description": "AI-powered CLI bot for automating build-in-public tweets with code screenshots",
  "main": "dist/index.js",
  "bin": {
    "bip": "dist/cli.js",
    "build-in-public": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:clean": "rm -rf ~/.bip && npm test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "NODE_ENV=test jest --runInBand --testPathPattern=src/.*\\.test\\.ts$",
    "test:integration": "npm run build && NODE_ENV=test jest --runInBand --testPathPattern=src/__tests__/integration/.*\\.test\\.ts$",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "link-local": "npm link",
    "unlink-local": "npm unlink"
  },
  "keywords": [
    "cli",
    "build-in-public",
    "twitter",
    "bot",
    "automation",
    "social-media",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "dotenv": "^16.3.1",
    "yaml": "^2.3.4",
    "axios": "^1.6.2",
    "keytar": "^7.9.0",
    "zod": "^3.22.4",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.10.2",
    "twitter-api-v2": "^1.15.2",
    "puppeteer": "^21.6.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "tough-cookie": "^4.1.3",
    "node-fetch": "^3.3.2",
    "chokidar": "^3.5.3",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.10",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "axios-mock-adapter": "^1.22.0",
    "@types/axios-mock-adapter": "^1.10.0",
    "mock-fs": "^5.2.0",
    "@types/mock-fs": "^4.13.4"
  }
}